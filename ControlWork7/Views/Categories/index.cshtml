@model IEnumerable<ControlWork7.Models.Category>
@{ ViewData["Title"] = "Категории"; }
<h2>Категории</h2>
<p><a class="btn btn-success" asp-action="Create">Добавить</a></p>
<table class="table table-striped">
    <thead><tr><th>Название</th><th></th></tr></thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Изменить</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>
