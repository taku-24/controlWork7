@model ControlWork7.Models.BookListViewModel
@{
    ViewData["Title"] = "Книги";
}

<h2>Книги</h2>


<div class="mb-2">
    Сортировка:
    <a asp-action="Index"
       asp-route-sort="created_desc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Новые</a> |
    <a asp-action="Index"
       asp-route-sort="title_asc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Название ↑</a> /
    <a asp-action="Index"
       asp-route-sort="title_desc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Название ↓</a> |
    <a asp-action="Index"
       asp-route-sort="author_asc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Автор ↑</a> /
    <a asp-action="Index"
       asp-route-sort="author_desc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Автор ↓</a> |
    <a asp-action="Index"
       asp-route-sort="status_asc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Статус (дост.)</a> /
    <a asp-action="Index"
       asp-route-sort="status_desc"
       asp-route-title="@Model.TitleFilter"
       asp-route-author="@Model.AuthorFilter"
       asp-route-status="@Model.StatusFilter"
       asp-route-categoryId="@Model.CategoryId">Статус (выд.)</a>
</div>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Create">Добавить книгу</a>
</div>

@if (!Model.Books.Any())
{
    <p>Книги ещё не добавлены.</p>
}
else
{
    <div class="row">
        @foreach (var b in Model.Books)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <a asp-action="Details" asp-route-id="@b.Id">
                        <img src="@b.CoverPath" class="card-img-top" style="height:220px; object-fit:cover;" alt="@b.Title" />
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@b.Title</h5>
                        <p class="card-text text-muted mb-1">@b.Author</p>
                        <p class="card-text"><small>@b.Category?.Name</small></p>
                        <span class="badge @(b.IsAvailable ? "bg-success" : "bg-secondary")">
                            @(b.IsAvailable ? "Доступна" : "Выдана")
                        </span>
                        <div class="mt-auto d-flex gap-2 pt-2">
                            <a class="btn btn-primary btn-sm flex-fill" asp-action="Details" asp-route-id="@b.Id">Детали</a>
                            <a class="btn btn-outline-secondary btn-sm flex-fill" asp-action="Edit" asp-route-id="@b.Id">Изменить</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-title="@Model.TitleFilter"
                       asp-route-author="@Model.AuthorFilter"
                       asp-route-status="@Model.StatusFilter"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-sort="@Model.Sort">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
