@model ControlWork7.Models.Book
@{
    ViewData["Title"] = "Детали книги";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-4">
        <img src="@Model.CoverPath" alt="@Model.Title" class="img-fluid rounded" />
    </div>
    <div class="col-md-8">
        <h2>@Model.Title</h2>
        <p><strong>Автор:</strong> @Model.Author</p>
        <p><strong>Год выпуска:</strong> @(Model.Year?.ToString() ?? "—")</p>
        <p><strong>Категория:</strong> @Model.Category?.Name</p>
        <p><strong>Описание:</strong> @Model.Description</p>
        <p><strong>Статус:</strong> @(Model.IsAvailable ? "Доступна" : "Выдана")</p>

        @if (Model.IsAvailable)
        {
            <form asp-action="Take" method="post" class="mt-3">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="mb-3">
                    <label>Email пользователя</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-success">Взять книгу</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning mt-3">Книга сейчас на руках.</div>
        }

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Редактировать</a>
        </div>
    </div>
</div>
