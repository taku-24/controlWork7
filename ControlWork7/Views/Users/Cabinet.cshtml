@{
    ViewData["Title"] = "Личный кабинет";
}
<h2>Личный кабинет</h2>
<p>Введите ваш email, чтобы посмотреть активные книги и сдать их.</p>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">@(ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage)</div>
}

<form method="post" asp-action="Cabinet">
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" required />
    </div>
    <button class="btn btn-primary" type="submit">Открыть кабинет</button>
</form>
